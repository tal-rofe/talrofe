{
	"name": "tal-rofe",
	"description": "Tal Rofe Website",
	"version": "1.0.0",
	"license": "UNLICENSED",
	"private": true,
	"type": "module",
	"author": "Tal Rofe <talrofe111@gmail.com> (https://talrofe.com)",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"husky:install": "husky",
		"git:config": "git config --local include.path ../.gitconfig",
		"setdev": "run-p husky:install git:config",
		"prepare": "is-ci || is-docker || pnpm setdev",
		"build": "dotenv -e envs/.env.production -- next build",
		"start": "dotenv -e envs/.env.production -- next start -p 8080",
		"start:dev": "dotenv -e envs/.env.development -- next dev -p 8080",
		"start:prod": "serve ./out",
		"type-check": "tsc --project ./tsconfig.json",
		"knip": "knip -c ./knip.json",
		"prettier": "prettier --check **/*.{ts,js,cjs,json,yaml}",
		"cspell": "cspell lint -c ./cspell.json --gitignore --no-progress --no-summary **"
	},
	"dependencies": {
		"@react-three/drei": "9.122.0",
		"@react-three/fiber": "8.18.0",
		"@tailwindcss/typography": "0.5.16",
		"ag-grid-community": "31.3.4",
		"clsx": "2.1.1",
		"framer-motion": "11.18.2",
		"next": "14.2.28",
		"next-themes": "0.3.0",
		"nextjs-toploader": "1.6.12",
		"prismjs": "1.30.0",
		"react": "18.3.1",
		"react-icons": "5.5.0",
		"react-syntax-highlighter": "15.6.1",
		"remark-gfm": "4.0.1",
		"sharp": "0.34.1",
		"tailwind-merge": "2.6.0",
		"tailwindcss-animate": "1.0.7",
		"three": "0.174.0",
		"three-globe": "2.42.4"
	},
	"devDependencies": {
		"@commitlint/cli": "19.8.0",
		"@mdx-js/loader": "3.1.0",
		"@mdx-js/react": "3.1.0",
		"@next/mdx": "14.2.28",
		"@types/mdx": "2.0.13",
		"@types/node": "22.15.18",
		"@types/react": "18.3.20",
		"@types/react-dom": "18.3.7",
		"@types/react-syntax-highlighter": "15.5.13",
		"@types/three": "0.174.0",
		"autoprefixer": "10.4.21",
		"commitizen": "4.3.1",
		"commitlint": "19.8.0",
		"cspell": "8.19.4",
		"cz-vinyl": "2.5.4",
		"dotenv-cli": "8.0.0",
		"husky": "9.1.7",
		"is-ci": "4.1.0",
		"is-docker": "3.0.0",
		"knip": "5.53.0",
		"lint-staged": "15.5.1",
		"npm-run-all2": "6.2.6",
		"pnpm": "9.15.9",
		"postcss": "8.5.3",
		"postcss-import": "16.1.0",
		"postcss-nesting": "13.0.1",
		"prettier": "3.5.3",
		"prettier-plugin-tailwindcss": "0.6.11",
		"rehype-raw": "7.0.0",
		"serve": "14.2.4",
		"tailwindcss": "3.4.17",
		"typescript": "5.8.3"
	},
	"packageManager": "pnpm@9.15.9",
	"engines": {
		"npm": "please-use-pnpm",
		"yarn": "please-use-pnpm",
		"pnpm": ">=9",
		"node": ">=20"
	}
}
